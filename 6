#include <iostream>    
#include <cctype>
#include <cstring>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    char str1[100];
    cout << "Введите строку: ";
    cin.getline(str1, 100);
    char str2[100];
    char* k2 = str2;

    for (int i = 0; i < strlen(str1); i++) {
        if (str1[i] != ' ') {
            *k2 = str1[i];
            ++k2;
        }
    }
    *k2 = '\0';

    int c = 0;

    for (int i = 0; i < strlen(str2); i++) {
        for (int j = 0; j < i; j++) {
            if (isalpha(str2[j]) && str2[i] == str2[j]) {
                cout << "Самая короткая подстрока: " << str2[i];
                break;
            }
        }
    }

    return 0;
}
