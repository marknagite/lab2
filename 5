#include <iostream>     
#include <cctype>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    char str[100];

    cout << "Введите строку: ";
    cin.getline(str, 100);
    int s = 0;
    int one = -1;
    int len = strlen(str);
    for (int i = 0; i<len; i++) {
        if (isalpha(str[i]) && one == -1) {
            one = i;
        }
        else if (!isalpha(str[i]) && one != -1) {
            if (str[one] == str[i-1]) {
                s++;
            }
            one = -1;
        }
        if (i==len-1 && one != -1) {
            if (str[one] == str[i]) {
                s++;
            }
        }
    }
    
    cout <<  s ;

    return 0;
}
