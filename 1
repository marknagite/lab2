#include <iostream>       
#include <cstring>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	char str1[100];
	cin.getline(str1, 100);
	int c = 0;
	for (int i = 0; i < strlen(str1); i++) {
		if (i==0 && tolower(str1[i])=='a') {
			c++;
		}
		else if (str1[i] == ' ' && tolower(str1[i + 1]) == 'a') {
			c++;
		}
	}
	
	cout << c << endl;
	cout << str1;
	return 0;
}
