#include <iostream>      
#include <cstring>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");
	int s = 0;
	char str1[100];
	
	cin.getline(str1, 100);
	int min = strlen(str1);
	bool flag = true;
	for (int i = 0; i < strlen(str1); i++) {
		if (isalpha(str1[i])) {
			s++;
			flag = true;
			if (i == strlen(str1) - 1) {
				if (s < min) {
					min = s;
				}
			}
		}
		else if(s<min && s!=0){
			min = s;
			s = 0;
			flag = false;
		} 
		else if (!flag) {
			continue;
		}
	}

	cout << min;
	

	return 0;
}
